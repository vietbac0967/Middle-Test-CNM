<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <form method="post" enctype="multipart/form-data" action="/save">
            <div class="mb-3 col-5">
                <label class="form-label">Id Product</label>
                <input type="text" class="form-control" placeholder="Enter id product" name="maSP">
            </div>
            <div class="mb-3 col-5">
                <label class="form-label">Name Product</label>
                <input type="text" class="form-control" placeholder="Enter name product" name="tenSP">
            </div>
            <div class="mb-3 col-5">
                <label class="form-label">Quantity</label>
                <input type="text" class="form-control" placeholder="Enter name product" name="soLuong">
            </div>
            <div class="mb-3 col-5">
                <label class="form-label">Image Product</label>
                <input type="file" class="form-control" placeholder="Enter image product" name="image">
            </div>
            <button class="btn btn-success" type="submit">Add course</button>
        </form>

        <form method="post" action="/delete">
            <table class="table table-border table-hover">
                <h1 class="text-center">List of courses</h1>
                <thead>
                    <tr>
                        <th>Ma San Pham</th>
                        <th>Ten San Pham</th>
                        <th>So luong</th>
                        <th>Image</th>
                        <th>select</th>

                    </tr>
                </thead>
                <tbody>
                    <% courses.forEach(item=> { %>
                        <tr>
                            <td>
                                <%= item.maSP %>
                            </td>
                            <td>
                                <%= item.tenSP %>
                            </td>
                            <td>
                                <%= item.soLuong %>

                            </td>
                            <td>
                                <img style="width: 40px;height: 40px;" src="<%= item.image %>" />
                            </td>
                            <td>
                                <input type="checkbox" name="ids" value="<%= item.maSP %>" />
                            </td>
                        </tr>
                        <% }) %>
                </tbody>

            </table>
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
</body>

</html>